  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-native",
    "types": ["react", "react-native"],
    "lib": ["es2020"]
  },
  "include": ["src/**/*", "plugin/**/*"]
}
